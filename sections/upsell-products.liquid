{%- liquid
  assign cart_product_ids = cart.items | map: 'product_id'
  assign all_shop_products = collections['all'].products

  assign candidate_products = all_shop_products | where: "available", true
  assign candidate_products = candidate_products | reject: "id", cart_product_ids

  assign chosen_products = ''
  assign chosen_collections = ''
  assign displayed_products_count = 0
  assign max_products_to_display = 3

  assign random_seed = 'now' | date: '%s' | modulo: 1000
-%}

{% if candidate_products.size > 0 and cart.item_count > 0 %}
<section class="section upsell-products" data-section-id="{{ section.id }}">
  <div class="container">
    <h3 class="section-heading">{{ section.settings.title | default: 'Você também pode gostar' }}</h3>
    <div class="product-grid">
      
      {% for product in candidate_products %}
        {%- liquid
          if displayed_products_count >= max_products_to_display
            break
          endif

          assign collection_handle = product.collections | first | default: ''
          
          unless chosen_collections contains collection_handle
            assign chosen_collections = chosen_collections | append: ',' | append: collection_handle
            assign chosen_products = chosen_products | append: ',' | append: product.handle
            assign displayed_products_count = displayed_products_count | plus: 1
          endunless
        -%}
      {% endfor %}

      {% assign chosen_products_array = chosen_products | split: ',' %}
      {% for handle in chosen_products_array %}
        {% assign upsell_product = all_shop_products | where: "handle", handle | first %}
        {% if upsell_product %}
          <div class="product-card" data-product-id="{{ upsell_product.id }}">
            <a href="{{ upsell_product.url }}" class="product-card__image-link">
              {% if upsell_product.featured_image %}
                <img 
                  src="{{ upsell_product.featured_image | image_url: width: 400 }}"
                  alt="{{ upsell_product.featured_image.alt | default: upsell_product.title }}"
                  class="product-card__image"
                  loading="lazy"
                >
              {% endif %}
            </a>
            
            <div class="product-card__info">
              <h4 class="product-card__title">
                <a href="{{ upsell_product.url }}">{{ upsell_product.title }}</a>
              </h4>
              <div class="product-card__price">
                {% render 'price', product: upsell_product %}
              </div>

              {% if upsell_product.variants.size == 1 %}
                <form method="post" action="/cart/add">
                  <input type="hidden" name="id" value="{{ upsell_product.selected_or_first_available_variant.id }}">
                  <button type="submit" class="button">
                    {{ section.settings.button_text | default: 'Adicionar ao carrinho' }}
                  </button>
                </form>
              {% else %}
                <a href="{{ upsell_product.url }}" class="button button--secondary">
                  Ver produto
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}

    </div>
  </div>
</section>
{% endif %}
